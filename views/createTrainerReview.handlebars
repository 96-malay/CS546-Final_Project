<main>

    <div class="main">

        <section class="signup">
            
            <div class="container">
                <div class="signup-content">
                    <form method="POST" action="/trainers/createReviewTrainer" id="trainer-review-form" class="signup-form">
                        <h1 class="form-title">Create Review</h1>


                        <div class="form-row">
                        <div class="form-group col-md-12 mb-4">
                            {{!-- Show trainer's name here --}}
                            <h2 hidden></h2>
                            <h3 id="trainer">{{trainerFirstname}}</h3>
                            <input name="trainerFirstname" value={{trainerFirstname}} hidden>
                            <input name="trainerLastname" value={{trainerLastname}} hidden>
                            <input name="trainerId" value={{trainerId}} hidden>
                            {{!-- <input name="gymId" value={{gymId}} hidden> --}}
                        </div>
                        </div>

                        <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            {{!-- For star in rating --}}
                            {{!-- <span class="fa fa-star starTR checked" style="color:blue;" data-val="1"></span>
                            <span class="fa fa-star starTR checked" style="color:blue;" data-val="2"></span>
                            <span class="fa fa-star starTR checked" style="color:blue;" data-val="3"></span>
                            <span class="fa fa-star starTR" style="color:blue;" data-val="4"></span>
                            <span class="fa fa-star starTR" style="color:blue;" data-val="5"></span>
                            <input id="starTR" name="starTR" hidden> --}}

                            <select class="form-control" id="starTR" name="starTR" >
                                <option value="" class="gray" selected disabled hidden>Select Rating</option>
                                <option value="0">Please Select Rating</option>
                                <option value="1">1.0 </option>
                                <option value="2">2.0 </option>
                                <option value="3">3.0 </option>
                                <option value="4">4.0 </option>
                                <option value="4">5.0 </option>
                            </select>

                        </div>
                        </div>
                        <div id="error-star" hidden></div>

                        
                        <div class="form-group">
                            <label for="reviewTextTR" hidden></label>
                          <textarea id="reviewTextTR" name="reviewTextTR" rows="4" cols="50" required></textarea>
                        </div>
 
                <div class="form-group">
                    <button type="button"  id="submitTRB" class="btn btn-primary" >Submit</button>
                
                </div>
                {{#if success}}
                <h3>{{success}}</h3>
                {{/if}}
        </form>
                   
                </div>
            </div>
        </section>

    </div>
    

</main>




