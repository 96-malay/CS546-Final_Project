    <div class="main">

        <section class="createTrainer">
            
            <div class="container">
                <div class="createTrainer-content">
                    <form method="post" action="trainers/createTrainer" id="trainer-form" class="trainer-form">
                        <h2 class="form-title">Create Trainer</h2>
                        {{!--  --}}
                        <div class="form-group ">
                            <label for="gymId">Select gym</label>
                            <select class="form-control" name="gymId" id="gymId">
                                {{#each gymList}}
                                    <option value="{{this._id}}">{{this.gymName}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-row">
                        <div class="form-group col-md-6 mb-2">
                            <label for="trainerFirstName" hidden>trainerFirstName</label>
                            <input type="text" class="form-input " name="trainerFirstName" id="trainerFirstName" placeholder="First name" required/>
                        </div>
                        <div class="form-group col-md-6 mb-2">
                            <label for="trainerLastName" hidden>trainerLastName</label>
                            <input type="text" class="form-input" name="trainerLastName" id="trainerLastName" placeholder="Last name" required/>
                        </div>
                        </div>

                        <div class="form-group">
                            <label for="emailId" hidden>emailId</label>
                            <input type="email" class="form-input" name="emailId" id="emailId" placeholder="Email" required/>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                          
                          <select class="form-control" id="gender" name="gender" placeholder="Select Gender" required>
                              <option value="none" class="gray" selected disabled hidden>Select Gender</option>
                              <option value="Female">Female</option>
                              <option value="Male">Male</option>
                              <option value="Other">Other</option>
                            </select>
                        </div>

                        {{!-- Gym id will be given by gym page --}}
                       

                        <div class="form-group">
                          <label for="phoneNo" hidden>Enter Mobile number</label>
                          <input type="tel" class="form-input" id="phoneNo" name="phoneNo" 
                                 placeholder="Enter 10-digit phone number" pattern="[0-9]{10}" 
                                 maxlength="10" minlength="10" required>
                        </div>
                        
                         <div class="form-group">
                        <label for="experience" hidden>Experience</label>
                        <input id="experience" type="number" class="form-input" name="experience" placeholder="Experience in Years" required>
                         </div>
                        
                        
                        <div class="form-group">
                            <button type="button"  id="submitTCreate" class="form-submit">submit</button>
                            
                        </div>
                        <div class="form-group hidden" >
                            <div class="alert alert-danger text-goes-here" id="errorTCreate" hidden>
                                 
                            </div>
                        </div>
                    </form>
                    {{#if error}}
                    <div class="form-group hidden" id="error-container" >
                            <div class="alert alert-danger text-goes-here">
                                 {{error}}
                            </div>
                        </div>
                   
                    {{/if}}
                    {{!-- <p class="loginhere">
                        Have already an account ? <a href="/login" class="loginhere-link" >Login here</a>
                    </p> --}}
                </div>
            </div>
        </section>

    </div>
    

</main>