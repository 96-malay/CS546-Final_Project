<main>

    <div class="main">

        <section class="signup">
            
            <div class="container">
                <div class="signup-content">
                    <form method="POST" action="/gyms/gymupdate/{{id}}" id="signup-form" class="signup-form">
                        <h2 class="form-title">Update Gym</h2>


                        <div class="form-row">
                        <div class="form-group col-md-12 mb-4">
                            <input type="text" class="form-input" name="firstname" id="firstname" value="{{values.gymName}}" />
                        </div>
                        </div>

                        <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                          
                          <select class="form-control" id="city" name="city" placeholder="Select Location">
                              <option value="{{values.location}}" class="gray" hidden>{{values.location}}</option>
                              <option value="Jersey City">Jersey City</option>
                              <option value="Hoboken">Hoboken</option>
                            </select>
                        </div>
                       

                        <div class="form-group col-md-6 mb-3">
                            <select class="form-control" id="price" name="price" placeholder="Select Price Range">
                              <option value="{{values.priceRange}}" class="gray" hidden>{{values.priceRange}}</option>
                              <option value="$" class="">$</option>
                              <option value="$$">$$</option>
                              <option value="$$$">$$$</option>
                              <option value="$$$$">$$$$</option>
                            </select>
                          
                        </div>
                        </div>

                       <div class="form-row">
                        <div class="form-group col-md-12 mb-3">
                          {{!-- <label for="mobile">Enter Mobile number</label> --}}
                          <input type="text" class="form-input" id="mobile" name="mobile" value="{{values.phoneNumber}}" required>
                          
                        </div>
                        </div>
                        
  
    {{!-- <div>
        <input type="submit" name="btn_upload_profile_pic" value="Upload" />
    </div> --}}


