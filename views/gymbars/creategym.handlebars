<main>
    <h1 hidden>gym</h1>
    <div class="main">

        <section class="signup">
            
            <div class="container">
                <div class="signup-content">
                    <form method="POST" action="/gyms/gymcreate" id="signup-form" class="signup-form">
                        <h2 class="form-title">Create Gym</h2>


                        <div class="form-row">
                        <div class="form-group col-md-12 mb-4">
                            <label for="firstname" hidden>Gym Name</label>
                            <input type="text" class="form-input" name="firstname" id="firstname" placeholder="Gym name"/>
                        </div>
                        </div>

                        <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                          
                          <select class="form-control" id="city" name="city">
                              <option value="" class="gray" >Select City</option>
                              <option value="Jersey City">Jersey City</option>
                              <option value="Hoboken">Hoboken</option>
                            </select>
                        </div>
                        </div>

                        
                        <div class="form-group">
                          {{!-- <label for="mobile">Enter Mobile number</label> --}}
                          <label for="mobile" hidden>Gym Contact Number</label>
                          <input type="text" class="form-input" id="mobile" name="mobile" placeholder="Gym contact number" required>
                        </div>

                       <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                          
                          <select class="form-control" id="price" name="price">
                              <option value="" class="gray">Select Price Range</option>
                              <option value="$">$</option>
                              <option value="$$">$$</option>
                              <option value="$$$">$$$</option>
                              <option value="$$$$">$$$$</option>
                            </select>
                             
                        </div>
                        </div>
                        
                    <div class="form-group">
                <input type="submit" name="submitform" id="submitform" class="form-submit" value="Submit"/> <br><br>

                <div class="form-group hidden" id="error-container" hidden>
                <div class="alert alert-danger text-goes-here">
                </div>
                </div>
        
        </div>
        </form>
               {{#if error}}
                    <div class="form-group hidden" id="error-container" >
                            <div class="alert alert-danger text-goes-here">
                                 {{error}}
                            </div>
                        </div>
                   
                    {{/if}}    
                
            </div>
            </div>
        </section>

    </div>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
        crossorigin="anonymous"></script>
    <script src="/public/js/creategym.js"></script>

</main>




