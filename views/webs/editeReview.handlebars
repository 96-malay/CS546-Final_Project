
<main>

 <div class="main">

        <section class="signup">
            
            <div class="container">
                <div class="signup-content">
                    <form action = "/review/editeReview/{{reviewId.id}}" class="signup-form" method="POST" id="edite_reivew">
                        <h1 hidden></h1>
                        <h2 class="form-title">Change your mind? You can edite your review here:</h2>
                        

                        <div class="form-row">
                        <div class="form-group col-md-12 mb-4">
                            <label for="edite_your_reivew" id="edreviewInfo">Leave your newest review here:</label><br>
                            <input class ="form-input" type="text" id="edite_your_reivew" name="review" value="{{reviewText}}"><br>
                        </div>
                        </div>

                        <div class="form-row">
                        <div class="form-group col-md-12 mb-3">
                    
                        </div>
                        </div>

                        <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                        <label for="edite_your_rating" id="edite_ratingnfo">Select a score (1 is lowest, 5 is highest)</label><br>
                        <select class="form-control" id="edite_your_rating" name="rating">
                            
                                
                                <option value="{{rating}}" class="gray" selected  hidden>{{rating}}</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        </div>

                        
                        
                             
                        
                    <div class="form-group">
                <input class="form-submit" type="submit" name="submitForm" value="submitForm">

                <div class="form-group" id="error-container_edite" hidden>
                <div class="alert alert-danger text-goes-here-edite">
                 </div>
    </div>

        </div>
        
        </form>
                   
                </div>
            </div>
        </section>

    </div>

    {{#if ReviewNotProvide}}
    <p class = "error">You can not leave your review empty</p>
    {{/if}}

    {{#if reviewTypeWrong}}
    <p class = "error">Please enter the correct type review</p>
    {{/if}}

    {{#if reviewSapce}}
    <p class = "error">Your review can not be all white space </p>
    {{/if}}

    {{#if ratingNotProvide}}
    <p class = "error">You need to provide a rating</p>
    {{/if}}

    {{#if ratingTypeWrong}}
    <p class = "error">You need to give a rgiht type rating </p>
    {{/if}}

    {{#if ratingWrong}}
    <p class = "error">You need to give a valid number</p>
    {{/if}}




    <script src="/public/js/checkEditeReview.js"></script>



</main>