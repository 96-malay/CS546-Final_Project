<main>

    <div class="main">

        <section class="signup">
            
            <div class="container">
                <div class="signup-content">
                    <form method="post" action="/signup" id="signup-form" class="signup-form">
                        <h2 class="form-title">Profile Page</h2>

                        <label for="role">Are you a?</label>
                        <div class="form-row "> 
                            {{!-- put box class --}}
                        <div class="form-group col-md-6 mb-3 ">
                         <div class="radio greenborder center">
                         <label class=" tab-label"><input type="radio" class="form-input" value = "user" name="role" checked>User</label>
                         </div>        
                          
                        </div>
                        <div class="form-group col-md-6 mb-3 ">
                        <div class="radio  center">
                         <label class="tab-label"><input type="radio" class="form-input" value = "owner" name="role" >Gym Owner</label>
                         </div>
                        </div>
                        </div>
                       
                       <div class="grayborder">

                        <div class="form-row ">
                        <div class="form-group col-md-6 mb-2">
                            <input type="text" class="form-input " name="firstname" id="firstname" placeholder="First name"/>
                        </div>
                        <div class="form-group col-md-6 mb-2">
                            <input type="text" class="form-input" name="lastname" id="lastname" placeholder="Last name"/>
                        </div>
                        </div>

                        <div class="form-group">
                            <input type="email" class="form-input" name="email" id="email" placeholder="Email"/>
                        </div>

                        <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                          
                          <select class="form-control" id="city" name="city" placeholder="Select City">
                              <option value="none" class="gray" selected disabled hidden>Select City</option>
                              <option value="Jersey City">Jersey City</option>
                              <option value="Hoboken">Hoboken</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <select class="form-control" id="state" name="state" placeholder="Select State">
                              <option value="none" class="gray" selected disabled hidden>Select State</option>
                              <option value="New Jersey">New Jersey</option>
                            </select>
                        </div>
                        </div>

                        <div class="form-group">
                          {{!-- <label for="mobile">Enter Mobile number</label> --}}
                          <input type="number" class="form-input" id="mobile" name="mobile" placeholder="Enter 10-digit phone number" pattern="[0-9].{10}" maxlength="10" minlength="10" required>
                        </div>

                        <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                          
                          <select class="form-control" id="gender" name="gender" placeholder="Select Gender">
                              <option value="none" class="gray" selected disabled hidden>Select Gender</option>
                              <option value="female">Female</option>
                              <option value="male">Male</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <input class="form-control" name= "dob" placeholder="Select DOB" type="text" id="dob" onfocus="(this.type='date')" onblur="(this.type='text')"   >
                            
                            {{!-- <i class="fas fa-calendar input-prefix" tabindex=0></i> --}}
                        </div>
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-input" name="password" id="password" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"/>
                            {{!-- <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span> --}}
                        </div>
                        {{!-- <div class="form-group">
                            <input type="password" class="form-input" name="password2" id="re_password" placeholder="Repeat your password"/>
                        </div> --}}
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" required>
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="Submit"/>
                        </div>
                        </div>
                    </form>
                    {{#if error}}
                    <h3>{{error}}</h3>
                    {{/if}}
                    <p class="loginhere">
                        Have already an account ? <a href="/login" class="loginhere-link" >Login here</a>
                    </p>
                </div>
            </div>
        </section>
    <br>
    </div>
    

</main>